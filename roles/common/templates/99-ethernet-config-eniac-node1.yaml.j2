network:
  version: 2
  renderer: networkd
  ethernets:
    eth0:
      dhcp4: false
      dhcp6: false
      addresses:
        - {{ nodes[inventory_hostname].node_info.ip_address }}/24
      routes:
        - to: default
          via: {{ router_gateway_ip }}
        - to: 10.32.0.0/24
          via: 192.168.50.4
        - to: 10.200.1.0/24
          via: 192.168.50.5
        - to: 10.200.2.0/24
          via: 192.168.50.6
        - to: 10.200.3.0/24
          via: 192.168.50.7
      nameservers:
        addresses: [{{ router_gateway_ip }}]
